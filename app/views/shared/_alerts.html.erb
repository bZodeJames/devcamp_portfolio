<% if flash[:alert] %>
    <%= js add_gritter(flash[:alert], :title => "Alert!", :sticky => false) %>
<% elsif flash[:error] %>
    <%= js add_gritter(flash[:error], :title => "ERROR!! ERROR!!", :sticky => false) %>  
<% else flash[:notice] %>
    <%= js add_gritter(flash[:notice], :title => "Attention!", :sticky => false) %>      
<% end %>